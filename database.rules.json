{
  "rules": {
    ".write": false,
    "ratings": {
      ".read": false,
      ".write": false,
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "userSessions": {
      ".read": false,
      ".write": false,
      "$uid": {
        ".read": "auth.uid === $uid",
        ".write": "auth.uid === $uid"
      }
    },
    "speakers": {
      ".read": true,
      ".write": "root.child('users').child(auth.uid).child('rules').child('speakers').val() === true"
    },
    "userDetails": {
      ".read": true,
      ".write": false,
      "$uid": {
        ".write": "auth.uid === $uid"
      }
    },      
    "activities": {
      ".read": true,
      "$aid": {
        ".write": "(auth != null) && (!data.exists() || data.child('owner').val() === auth.uid) && (!newData.exists() || newData.child('owner').val() === auth.uid)",
        ".indexOn": "public"
      }
    },
    "participants": {
      ".read": true,
      "$uid": {
        ".write": "auth.uid === $uid"
      }  
    }
  }
}
